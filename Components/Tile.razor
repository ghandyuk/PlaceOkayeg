<div class="tile flex-col" style="background-color: @BackgroundColour; color: @Colour">
    <span>@X</span>
    <span>@Y</span>
</div>

@code {
    [Parameter] public int X { get; set; }
    [Parameter] public int Y { get; set; }
    [Parameter] public string Colour { get; set; }
    [Parameter] public string BackgroundColour { get; set; }
}
